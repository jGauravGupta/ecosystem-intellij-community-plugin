<idea-plugin>
    <id>fish.payara.micro.intellij</id>
    <name>Payara Community Tools</name>
    <description><![CDATA[
        Payara Community Tools allows configuring and using the Payara Platform, 
        for deploying and managing applications from the IDEA.  

        The plugin also provides seamless integration with Payara Qube for deploying and managing Jakarta EE applications:
        <ul>
            <li>Login to the Payara Qube platform.</li>
            <li>Start and Stop Payara Qube applications.</li>
            <li>Launch Payara Qube applications in development mode.</li>
            <li>Deploy and undeploy applications on Payara Qube.</li>
            <li>Retrieve lists of applications, namespaces, and subscriptions from the Payara Qube.</li>
        </ul>
        
        Download the <a href="https://plugins.jetbrains.com/plugin/15445-payara-community-tools/">
        Payara Tools</a> available in the IntelliJ IDEA Community 
        to develop the application with the Payara Qube, Payara Micro and Payara Server.
        
        Checkout the <a href="https://docs.payara.fish/community/docs/5.2020.6/documentation/ecosystem/intellij-plugin/README.html">
        usage instructions</a> of Payara IntelliJ tools for more details.
    ]]></description>
    <vendor email="info@payara.fish" url="https://www.payara.fish/">
        Payara Foundation
    </vendor>

    <depends>org.jetbrains.idea.maven</depends>
    <depends>org.jetbrains.plugins.gradle</depends>
    <depends>org.jetbrains.plugins.terminal</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.platform</depends>
    <resource-bundle>fish.payara.PayaraBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="fish.payara.micro.PayaraMicroConfigurationType"/>
        <configurationType implementation="fish.payara.server.PayaraServerConfigurationType"/>
        <moduleBuilder builderClass="fish.payara.micro.project.PayaraMicroModuleBuilder" order="last" id="PAYARA_MICRO_MODULE_BUILDER"/>
        <moduleType implementationClass="fish.payara.micro.project.PayaraMicroModuleType" id="JAVA_MODULE"/>
        <configurationType implementation="fish.payara.qube.PayaraQubeConfigurationType"/>
    </extensions>
    
    <actions>
 	<action id="fish.payara.qube.actions.QubeStartAction"
                class="fish.payara.qube.actions.QubeStartAction"
                text="Start Payara Qube Application"
                description="Start Payara Qube Application"
                icon="AllIcons.Actions.Execute" />
        
        <action id="fish.payara.qube.actions.QubeStopAction"
                class="fish.payara.qube.actions.QubeStopAction"
                text="Stop Payara Qube Application"
                description="Stop Payara Qube Application"
                icon="AllIcons.Actions.Cancel" />
        
        <action id="fish.payara.qube.actions.QubeLoginAction"
                class="fish.payara.qube.actions.QubeLoginAction"
                text="Login to Payara Qube"
                description="Login to Payara Qube"
                icon="AllIcons.Actions.Show" />
        
        <action id="fish.payara.qube.actions.QubeDevAction"
                class="fish.payara.qube.actions.QubeDevAction"
                text="Start Payara Qube Application in DevMode"
                description="Start Payara Qube Application in DevMode"
                icon="AllIcons.Actions.Refresh" />
        
        <action id="fish.payara.qube.actions.QubeDeployAction"
                class="fish.payara.qube.actions.QubeDeployAction"
                text="Deploy Payara Qube Application"
                description="Deploy Payara Qube Application"
                icon="AllIcons.Actions.Execute" />
        
        <action id="fish.payara.qube.actions.QubeUndeployAction"
                class="fish.payara.qube.actions.QubeUndeployAction"
                text="Undeploy Payara Qube Application"
                description="Undeploy Payara Qube Application"
                icon="AllIcons.Actions.Close" />

        <action id="fish.payara.qube.actions.QubeListApplicationAction"
                class="fish.payara.qube.actions.QubeListApplicationAction"
                text="List Payara Qube Applications"
                description="List Payara Qube Applications"
                icon="AllIcons.Actions.Find" />

        <action id="fish.payara.qube.actions.QubeListNamespaceAction"
                class="fish.payara.qube.actions.QubeListNamespaceAction"
                text="List Payara Qube Namespaces"
                description="List Payara Qube Namespaces"
                icon="AllIcons.Actions.Find" />

        <action id="fish.payara.qube.actions.QubeListSubscriptionAction"
                class="fish.payara.qube.actions.QubeListSubscriptionAction"
                text="List Payara Qube Subscriptions"
                description="List Payara Qube Subscriptions"
                icon="AllIcons.Actions.Find" />

        <action id="fish.payara.micro.actions.MicroStartAction"
                class="fish.payara.micro.actions.MicroStartAction"
                text="Start Micro"
                description="Start Payara Micro"
                icon="AllIcons.Actions.Execute" />
        
        <action id="fish.payara.micro.actions.MicroStartDebuggerAction"
                class="fish.payara.micro.actions.MicroStartDebuggerAction"
                text="Start Micro in debug mode"
                description="Start Payara Micro in debug mode"
                icon="AllIcons.Actions.StartDebugger" />
        
        <action id="fish.payara.micro.actions.MicroStopAction"
                class="fish.payara.micro.actions.MicroStopAction"
                text="Stop Micro"
                description="Stop Payara Micro" 
                icon="AllIcons.Actions.Cancel" >
        </action>
        
        <action id="fish.payara.micro.actions.MicroBundleAction"
                class="fish.payara.micro.actions.MicroBundleAction"
                text="Build Micro Uber Jar"
                description="Build Micro Uber Jar"
                icon="AllIcons.Actions.Compile" />

        <action id="fish.payara.micro.actions.MicroReloadAction"
                class="fish.payara.micro.actions.MicroReloadAction"
                text="Reload Micro"
                description="Reload Payara Micro"
                icon="AllIcons.Actions.Refresh" />

        <action id="fish.payara.micro.actions.MigrateToJakartaEE10Action"
                class="fish.payara.micro.actions.MigrateToJakartaEE10Action"
                text="Transform to Jakarta-EE-10"
                description="Transform to Jakarta-EE-10">
            <add-to-group group-id="RefactoringMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
